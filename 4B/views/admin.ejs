<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-light bg-light">
      <span class="navbar-brand mb-0 h1">Navbar</span>
      <a class="btn btn-outline-success" href="/">Back</a>
    </nav>
    <div class="container">
      <div class="mt-2">
        <a class="btn btn-info" href="/admin">Tambah Buku</a>
        <a class="btn btn-info" href="/categories">Tambah Kategori</a>
      </div>

      <h3 class="mt-4">Form Buku</h3>
      <form action="/addbooks" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="form-group">
          <label for="stock">Stock</label>
          <input type="number" class="form-control" id="stock" name="stock" />
        </div>
        <div class="form-group">
          <label for="description">Deskripsi</label>
          <input
            type="text"
            class="form-control"
            id="description"
            name="description"
          />
        </div>

        <div class="form-group">
          <label for="name">Kategori</label>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label class="input-group-text" for="inputGroupSelect01"
                >Pilih Kategori</label
              >
            </div>
            <select
              name="category"
              class="custom-select"
              id="inputGroupSelect01"
            >
              <option selected>Choose...</option>
              <option value="1">Teknologi</option>
              <option value="2">Akutansi</option>
              <option value="3">Pemasaran</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="image">Gambar</label>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroupFileAddon01"
                >Upload</span
              >
            </div>
            <div class="custom-file">
              <input
                type="file"
                class="custom-file-input"
                id="inputGroupFile01"
                name="image"
                aria-describedby="inputGroupFileAddon01"
              />
              <label class="custom-file-label" for="inputGroupFile01"
                >Choose file</label
              >
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-success">Tambahkan Buku</button>
      </form>

      <h3 class="mt-4">Daftar Buku</h3>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Stock</th>
            <th scope="col">Deskripsi</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% result.forEach(function(item){%>
          <tr>
            <td scope="row"><%= item.name %></td>
            <td><%= item.stock %></td>
            <td><%= item.deskripsi %></td>
            <td>
              <a href="edit/<%= item.id %>"
                ><button class="btn btn-info">Edit</button></a
              >
              <a href="delete/<%= item.id %>"
                 ><button class="btn btn-outline-danger">Delete</button></a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
